# AI Book Generator - Environment Variables Template
# Copy this file to .env and fill in your values

# ========================================
# DATABASE
# ========================================
# Local development (PostgreSQL)
DATABASE_URL=postgresql://localhost:5432/aibook_dev

# Production (Render.com will auto-populate this)
# DATABASE_URL=postgresql://user:password@host:port/database

# ========================================
# ANTHROPIC AI
# ========================================
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ========================================
# GUMROAD
# ========================================
GUMROAD_ACCESS_TOKEN=your_gumroad_access_token

# Product IDs for different credit packages
GUMROAD_PRODUCT_ID_STARTER=aibook-starter-1k
GUMROAD_PRODUCT_ID_PRO=aibook-pro-3k
GUMROAD_PRODUCT_ID_BUSINESS=aibook-business-7k
GUMROAD_PRODUCT_ID_ENTERPRISE=aibook-enterprise-17k

# ========================================
# APPLICATION
# ========================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# ========================================
# EMAIL NOTIFICATIONS
# ========================================
# Resend API Key for sending emails (get from https://resend.com)
RESEND_API_KEY=re_your_api_key_here

# From email address (must be verified domain)
FROM_EMAIL=Chaptera <noreply@chaptera.app>

# ========================================
# OPTIONAL - ADVANCED
# ========================================
# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Database connection pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
